    <!--ControlTemplate para los bordes de los VM-->
    <ControlTemplate x:Key="UserControlVM" TargetType="UserControl">
        <DockPanel x:Name="root" LastChildFill="True">
            <DockPanel.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush"
                                Value="{StaticResource BrushHome}" />
                    <Setter Property="Width"
                                Value="30" />
                    <Setter Property="Height"
                                Value="30" />
                    <Setter Property="CornerRadius"
                                Value="10" />
                </Style>
            </DockPanel.Resources>
            <Grid DockPanel.Dock="Top" Height="20">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border BorderThickness="2,2,0,0" />
                <Border BorderThickness="0,2,0,0"
                            Grid.Column="2"
                            Width="auto"
                            CornerRadius="0" />
                <Border BorderThickness="0,2,2,0"
                            Grid.Column="3"
                            HorizontalAlignment="Right" />
                <TextBlock Text="{Binding DataContext.Name,  RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                               Style="{StaticResource titleBarTitleHome}"
                               Grid.Column="1"
                               Margin="10,-15"
                               VerticalAlignment="Top" />
            </Grid>
            <Grid Height="20"
                      DockPanel.Dock="Bottom">
                <Border BorderThickness="2,0,2,2"
                            Width="auto"
                            VerticalAlignment="Bottom" />
            </Grid>
            <Border BorderThickness="2,0,0,0"
                        DockPanel.Dock="Left"
                        Height="auto"
                        Width="20"
                        CornerRadius="0" />
            <Border BorderThickness="0,0,2,0"
                        DockPanel.Dock="Right"
                        Width="20"
                        Height="auto"
                        CornerRadius="0" />
            <ContentPresenter Margin="-20" />


        </DockPanel>
    </ControlTemplate>

